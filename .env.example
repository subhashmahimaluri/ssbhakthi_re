# SSBhakthi Monorepo Environment Configuration
# Copy this file to .env and adjust values for your setup

# =================
# DEVELOPMENT PORTS
# =================
# Backend API Server
BACKEND_PORT=4000

# Frontend Instances
FRONTEND_TE_PORT=3000  # Telugu/English
FRONTEND_HI_PORT=3001  # Hindi  
FRONTEND_KN_PORT=3002  # Kannada

# =================
# DATABASE SERVICES  
# =================
# MongoDB
MONGODB_PORT=27017
MONGODB_ADMIN_PORT=8082
MONGODB_URL=mongodb://admin:devpassword123@localhost:27017/ssbhakthi_api?authSource=admin

# Redis
REDIS_PORT=6379
REDIS_ADMIN_PORT=8081
REDIS_URL=redis://:devpassword123@localhost:6379

# =================
# AUTHENTICATION
# =================
# Keycloak
KEYCLOAK_PORT=8080
KEYCLOAK_ISSUER=http://localhost:8080/realms/ssbhakthi
KEYCLOAK_CLIENT_ID=admin-app
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# =================
# API CONFIGURATION
# =================
# Backend GraphQL Endpoints
BACKEND_GRAPHQL_URL=http://localhost:4000/graphql
BACKEND_REST_URL=http://localhost:4000
NEXT_PUBLIC_BACKEND_GRAPHQL_URL=http://localhost:4000/graphql
NEXT_PUBLIC_BACKEND_REST_URL=http://localhost:4000

# =================
# SECURITY
# =================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# Revalidation Secret
REVALIDATE_SECRET=your_revalidation_secret_here

# =================
# APPLICATION
# =================
NODE_ENV=development

# GraphQL Configuration
GRAPHQL_PLAYGROUND=true
GRAPHQL_MAX_DEPTH=8
GRAPHQL_MAX_COST=15000
GRAPHQL_INTROSPECTION=true