{
  "name": "ssbhakthi_api",
  "version": "1.0.0",
  "description": "SSBhakthi API - Node.js TypeScript backend with Express",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "db:seed": "tsx scripts/seed.ts",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "keycloak:up": "docker compose -f docker-compose.keycloak.yml up -d",
    "keycloak:down": "docker compose -f docker-compose.keycloak.yml down"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "api",
    "mongodb",
    "redis"
  ],
  "author": "SSBhakthi Team",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@graphql-tools/schema": "^10.0.25",
    "@graphql-tools/utils": "^10.9.1",
    "@types/jsonwebtoken": "^9.0.10",
    "dataloader": "^2.2.3",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "graphql-cost-analysis": "^1.0.3",
    "graphql-depth-limit": "^1.1.0",
    "graphql-scalars": "^1.24.2",
    "jose": "^6.0.13",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "mongoose": "^8.18.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@types/eslint__js": "^9.14.0",
    "@types/express": "^5.0.3",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
